<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.CreateGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="34dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="34dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/createGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_game_name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/createGamePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:background="@drawable/primary_btn_bg"
            android:drawableRight="@mipmap/ic_photo_camera_white_24dp"
            android:padding="13dp"
            android:text="@string/create_game_photo"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/createGameIv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="21dp"
            android:padding="13dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/createGameSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:background="@drawable/accent_btn_bg"
            android:drawableRight="@mipmap/ic_save_white_24dp"
            android:padding="21dp"
            android:text="@string/create_game"
            android:textColor="@color/white"
            android:textSize="21sp" />
    </LinearLayout>


</ScrollView>
