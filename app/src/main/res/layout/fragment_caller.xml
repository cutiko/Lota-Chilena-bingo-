<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.cutiko.lotachilena.views.fragments.CallerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="34dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="34dp">

        <TextView
            android:id="@+id/roundsCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:padding="13dp"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/callerBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/accent_btn_bg"
            android:padding="13dp"
            android:src="@mipmap/ic_speaker_white_48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:padding="13dp"
            android:text="@string/last_number"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <Button
            android:id="@+id/lastNumberBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/primary_btn_bg"
            android:drawableRight="@mipmap/ic_volume_up_white_24dp"
            android:padding="13dp"
            android:textColor="@color/white"
            android:textSize="21sp" />

    </LinearLayout>

</ScrollView>
