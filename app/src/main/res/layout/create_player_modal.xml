<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="13dp">

    <LinearLayout
        android:id="@+id/namePhotoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">

        <include layout="@layout/name_photo"></include>

    </LinearLayout>


    <Button
        android:id="@+id/playerModalCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/namePhotoContainer"
        android:background="@drawable/primary_btn_bg"
        android:text="@string/cancel"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/playerModalSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/namePhotoContainer"
        android:background="@drawable/accent_btn_bg"
        android:text="@string/save"
        android:textColor="@color/white" />


</RelativeLayout>