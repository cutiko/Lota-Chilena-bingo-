<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.cutiko.lotachilena.views.activities.AddPlayersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="34dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="34dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/players_intructions"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <View style="@style/horizontalLine"></View>

        <Button
            android:id="@+id/addPlayerBtn"
            style="@style/primaryBtn"
            android:drawableRight="@mipmap/ic_add_white_24dp"
            android:text="@string/create_player" />

        <Button
            android:id="@+id/previousPlayerBtn"
            style="@style/primaryBtn"
            android:drawableRight="@mipmap/ic_add_white_24dp" />

        <Button
            android:id="@+id/currentPlayersBtn"
            style="@style/primaryBtn"
            android:drawableRight="@mipmap/ic_remove_red_eye_white_24dp"
            android:text="@string/current_players" />

        <View style="@style/horizontalLine"></View>

        <Button
            android:id="@+id/startGame"
            style="@style/accentBtn"
            android:drawableRight="@mipmap/ic_play_arrow_white_24dp"
            android:text="@string/start_game" />

    </LinearLayout>

</ScrollView>
